{
    "name": "cli-monorepo",
    "version": "1.0.6",
    "description": "YMA CLI 工具包",
    "main": "index.js",
    "scripts": {
        "init": "npm install && del-cli -f node_modules && npm run clean && lerna bootstrap",
        "bootstrap": "lerna bootstrap",
        "clean": "lerna clean --yes",
        "nlink": "lerna run link --scope yma-cli-*",
        "link": "lerna link",
        "build": "lerna run build",
        "version": "lerna version --no-push --force-publish --conventional-prerelease --no-git-tag-version",
        "publish": "lerna publish from-package",
        "lint": "eslint . --ext .ts --config './config/.eslintrc.js' --ignore-path './config/.eslintignore'"
    },
    "dependencies": {
        "del-cli": "5.1.0",
        "global": "4.4.0",
        "yma-cli": "^1.0.0"
    },
    "devDependencies": {
        "@types/node": "20.4.4",
        "typescript": "4.7.4",
        "yarn": "1.22.19"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:GitHubJian/yma-cli.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/GitHubJian/yma-cli/issues"
    },
    "homepage": "https://github.com/GitHubJian/yma-cli#readme",
    "workspaces": [
        "package/*"
    ],
    "engines": {
        "node": ">=14.17.0"
    },
    "private": true
}
